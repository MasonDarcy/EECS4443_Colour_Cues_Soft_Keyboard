<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:orientation= "vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/phrase_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:text=""
        android:layout_gravity="center"/>


    <TextView
        android:id="@+id/userInputs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:text=""
        android:layout_gravity="center"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/q"
                    android:layout_width="37dp"
                    android:layout_height="38dp"
                    android:onClick ="onClick"
                    android:text="q" />

                <Button
                    android:id="@+id/w"
                    android:layout_width="37dp"
                    android:layout_height="38dp"
                    android:onClick ="onClick"
                    android:text="w" />

                <Button
                    android:id="@+id/e"
                    android:layout_width="37dp"
                    android:layout_height="38dp"
                    android:onClick ="onClick"
                    android:text="e" />

                <Button
                    android:id="@+id/r"
                    android:layout_width="37dp"
                    android:layout_height="38dp"
                    android:onClick ="onClick"
                    android:text="r" />

                <Button
                    android:id="@+id/t"
                    android:layout_width="37dp"
                    android:layout_height="38dp"
                    android:onClick ="onClick"
                    android:text="t" />

                <Button
                    android:id="@+id/y"
                    android:layout_width="37dp"
                    android:layout_height="38dp"
                    android:onClick ="onClick"
                    android:text="y" />

                <Button
                    android:id="@+id/u"
                    android:layout_width="37dp"
                    android:layout_height="38dp"
                    android:onClick ="onClick"
                    android:text="u" />

                <Button
                    android:id="@+id/i"
                    android:layout_width="37dp"
                    android:layout_height="38dp"
                    android:onClick ="onClick"
                    android:text="i" />

                <Button
                    android:id="@+id/o"
                    android:layout_width="37dp"
                    android:layout_height="38dp"
                    android:onClick ="onClick"
                    android:text="o" />

                <Button
                    android:id="@+id/p"
                    android:layout_width="37dp"
                    android:layout_height="38dp"
                    android:onClick ="onClick"
                    android:text="p" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <Button
                    android:id="@+id/a"
                    android:layout_width="37dp"
                    android:layout_height="38dp"
                    android:onClick ="onClick"
                    android:text="a" />

                <Button
                    android:id="@+id/s"
                    android:layout_width="37dp"
                    android:layout_height="38dp"
                    android:onClick ="onClick"
                    android:text="s" />

                <Button
                    android:id="@+id/d"
                    android:layout_width="37dp"
                    android:layout_height="38dp"
                    android:onClick ="onClick"
                    android:text="d" />

                <Button
                    android:id="@+id/f"
                    android:layout_width="37dp"
                    android:layout_height="38dp"
                    android:onClick ="onClick"
                    android:text="f" />

                <Button
                    android:id="@+id/g"
                    android:layout_width="37dp"
                    android:layout_height="38dp"
                    android:onClick ="onClick"
                    android:text="g" />

                <Button
                    android:id="@+id/h"
                    android:layout_width="37dp"
                    android:layout_height="38dp"
                    android:onClick ="onClick"
                    android:text="h" />

                <Button
                    android:id="@+id/j"
                    android:layout_width="37dp"
                    android:layout_height="38dp"
                    android:onClick ="onClick"
                    android:text="j" />

                <Button
                    android:id="@+id/k"
                    android:layout_width="37dp"
                    android:layout_height="38dp"
                    android:onClick ="onClick"
                    android:text="k" />


                <Button
                    android:id="@+id/l"
                    android:layout_width="37dp"
                    android:layout_height="38dp"
                    android:onClick ="onClick"
                    android:text="l" />

                <Button
                    android:id="@+id/bk"
                    android:layout_width="37dp"
                    android:layout_height="38dp"
                    android:onClick ="onClick"
                    android:text="-" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/z"
                    android:layout_width="37dp"
                    android:layout_height="38dp"
                    android:onClick ="onClick"
                    android:text="z" />

                <Button
                    android:id="@+id/x"
                    android:layout_width="37dp"
                    android:layout_height="38dp"
                    android:onClick ="onClick"
                    android:text="x" />

                <Button
                    android:id="@+id/c"
                    android:layout_width="37dp"
                    android:layout_height="38dp"
                    android:onClick ="onClick"
                    android:text="c" />

                <Button
                    android:id="@+id/v"
                    android:layout_width="37dp"
                    android:layout_height="38dp"
                    android:onClick ="onClick"
                    android:text="v" />

                <Button
                    android:id="@+id/b"
                    android:layout_width="37dp"
                    android:layout_height="38dp"
                    android:onClick ="onClick"
                    android:text="b" />

                <Button
                    android:id="@+id/n"
                    android:layout_width="37dp"
                    android:layout_height="38dp"
                    android:onClick ="onClick"
                    android:text="n" />

                <Button
                    android:id="@+id/m"
                    android:layout_width="37dp"
                    android:layout_height="38dp"
                    android:onClick ="onClick"
                    android:text="m" />

                <Button
                    android:id="@+id/enter"
                    android:layout_width="45dp"
                    android:layout_height="38dp"
                    android:onClick="onClick"
                    android:text="en" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/test"
                    android:layout_width="37dp"
                    android:layout_height="38dp"
                    android:onClick="onClick"
                    android:text="%" />

                <Button
                    android:id="@+id/space"
                    android:layout_width="37dp"
                    android:layout_height="38dp"
                    android:onClick="onClick"
                    android:text="_______" />
            </TableRow>

        </TableLayout>


    </LinearLayout>